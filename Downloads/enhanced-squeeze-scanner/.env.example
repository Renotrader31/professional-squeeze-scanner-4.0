# Enhanced Squeeze Scanner Environment Variables

# Ortex API Configuration
ORTEX_API_KEY=your_ortex_api_key_here
ORTEX_BASE_URL=https://api.ortex.com/api/v2

# Unusual Whales API Configuration
UW_API_KEY=your_unusual_whales_api_key_here
UW_BASE_URL=https://api.unusualwhales.com/api

# Financial Modeling Prep API (backup for price data)
FMP_API_KEY=your_fmp_api_key_here
FMP_BASE_URL=https://financialmodelingprep.com/api/v3

# Application Configuration
NODE_ENV=development
PORT=3000

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Caching Configuration
CACHE_TTL=30000
ENABLE_CACHING=true

# Real-time Streaming Configuration
STREAM_INTERVAL=30000
MAX_CONNECTIONS=100
HEARTBEAT_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security Configuration
CORS_ORIGIN=*
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database Configuration (if needed for future features)
# DATABASE_URL=your_database_connection_string

# Redis Configuration (for caching and session management)
# REDIS_URL=your_redis_connection_string

# Analytics Configuration (optional)
# GOOGLE_ANALYTICS_ID=your_ga_id
# MIXPANEL_TOKEN=your_mixpanel_token

# Notification Configuration (for alerts)
# SLACK_WEBHOOK_URL=your_slack_webhook_url
# DISCORD_WEBHOOK_URL=your_discord_webhook_url
# EMAIL_SERVICE_API_KEY=your_email_service_key

# Performance Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Feature Flags
ENABLE_REAL_TIME_STREAMING=true
ENABLE_ADVANCED_ALERTS=true
ENABLE_FUNDAMENTAL_ANALYSIS=true
ENABLE_OPTIONS_FLOW=true
ENABLE_DARK_POOL_DATA=true

# Scanner Configuration
DEFAULT_SCAN_SYMBOLS=AAPL,TSLA,GME,AMC,BBBY,NVDA,MSFT,GOOGL,AMZN,META
MAX_SYMBOLS_PER_SCAN=50
SCAN_BATCH_SIZE=10
SCAN_DELAY_MS=1000

# Data Quality Thresholds
MIN_DATA_QUALITY_SCORE=70
REQUIRE_ORTEX_VALIDATION=true
ENABLE_MULTI_SOURCE_VALIDATION=true

# Alert Thresholds
HOLY_GRAIL_LEGENDARY_THRESHOLD=90
HOLY_GRAIL_STRONG_THRESHOLD=85
HOLY_GRAIL_MODERATE_THRESHOLD=75
CTB_EXPLOSION_THRESHOLD=50
HIGH_UTILIZATION_THRESHOLD=85
EXTREME_UTILIZATION_THRESHOLD=95

# UI Configuration
THEME=dark
ENABLE_SOUND_ALERTS=false
AUTO_REFRESH_INTERVAL=30000
SHOW_ADVANCED_METRICS=true

# Development Configuration
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT=false